<%# PAGE EDIT DU MOT DE PASSE %>

<div class="session-new-general-div">
  <h3>Change ton mot de passe</h3>

  <div class="session-new-line">
    <%= image_tag "svg/ligne.svg", class: "session-new-ligne", data: { inject: { svg: "svg/ligne.svg" } }, :width => 300 %>
  </div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="formulaire">
    <%= f.input :password,
                placeholder: 'nouveau mot de passe',
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                placeholder: 'confirmer mon mot de passe',
                label: false,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

    <button id="submit-btn" type="button"><%= f.button :submit, "Changer mon mot de passe" %></button>
  <% end %>

  <div class="session-new-links">Ou<%= render "devise/shared/links" %></div>
</div>
