<%# BOUTON RETOUR %>
<%= link_to game_match_path(@game_match) do %>
    <%= image_tag "svg/back_button.svg", class: "profil-header-return", data: { inject: { svg: "svg/back_button.svg" } }, :width => 27 %>
<% end %>
<% if (@accept === true)  %>
  <div class="reveal-identity-div">
