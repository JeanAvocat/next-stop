<%# PAGE DE JEUX %>
<div class="trip-session-new">

<%# HEADER %>
  <div class="trip-session-new-profile-div">
    <div class="trip-session-new-profile-text"><h6><span style="font-family: Barlow;">Bienvenue</span> <br><%= current_user.random_nickname %></h6></div>
    <div class="trip-session-new-profil-picture">
      <%= link_to my_profil_path do %>
        <%= image_tag "svg/profil.svg", class: "trip-session-new-profil", data: { inject: { svg: "svg/profil.svg" } }, :width => 50 %>
      <% end %>
    </div>
  </div>

<%# LIGNE %>
  <div class="trip-session-new-inside-profile">
  <div class="trip-session-new-line">
    <%= image_tag "svg/ligne.svg", class: "session-new-ligne", data: { inject: { svg: "svg/ligne.svg" } }, :width => 300 %>
  </div>

<%# BLOC INFORMATION DE LA ROOM %>
  <div class="trip-session-new-infos-div">
    <div class="trip-session-new-icons">
      <div class="trip-session-new-bus">
        <%= image_tag "svg/bus.svg", class: "trip-session-new-bus", data: { inject: { svg: "svg/bus.svg" } }, :width => 70 %>
      </div>
      <div class="trip-session-new-bonhommes">
      </div>
    </div>
    <div class="trip-session-new-details">
      <p>Bus  <span style="font-family: Oliver;">ligne 9</span></p>
      <p><span style="font-family: Oliver;"><%= @active_people  %></span> personnes connectées</p>
    </div>
  </div>

<%# CARDS DE JEUX %>
  <div class="trip-session-new-games-cards">
      <div class="trip-session-new-morpion-card">
        <%= image_tag "svg/morpions_card.svg", class: "trip-session-new-morpions-card", data: { inject: { svg: "svg/morpions_card.svg" } }, :height => 270 %>
      </div>
      <div class="trip-session-new-chifoumi-card">
        <%= image_tag "svg/chifoumi_card.svg", class: "trip-session-new-chifoumi-card", data: { inject: { svg: "svg/chifoumi_card.svg" } }, :height => 270 %>
      </div>
  </div>

   <% if @trip_session != nil  %>
      <%= button_to join_trip_session_path(@trip_session), class: "bouton-relou", method: :patch do %>
        <div class="trip-session-new-join">
          <img id="gif-gamer-bonhomme" src="/assets/gifs/gamer_bonhomme.gif" draggable="true" ondragstart="drag(event)" height="120">
          <div class="trip-session-new-button-join">
            <h2>Rejoins la partie!</h2>
          </div>
        </div>
      <% end %>
  <% else %>
  <%= button_to trip_sessions_path, class: "bouton-relou", method: :post do %>
    <div class="trip-session-new-create">
      <p>Aucune partie de Morpion en attente</p>
      <h2>Créer une partie!</h2>
    </div>
    <% end %>
  <% end %>
</div>
